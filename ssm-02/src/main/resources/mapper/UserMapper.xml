<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.ElderWan.mapper.UserMapper">

    <select id="getByNameAndPwd" resultType="com.ElderWan.entity.User" parameterType="user">
        SELECT *
        FROM user_list
        WHERE user_name=#{user_name} AND pwd=#{pwd}
    </select>
    <select id="getByName" resultType="com.ElderWan.entity.User" parameterType="java.lang.String">
        SELECT *
        FROM user_list
        WHERE user_name=#{user_name}
    </select>

</mapper>